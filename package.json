  "description": "",
  "main": "./lib/index.js",
  "module": "./es/index.js",
  "files": [
    "lib",
    "es"
  ],
  "scripts": {
    "removeDist": "node ./tools/deleteOutPath.js",
    "docs": "typedoc --out docs src --module commonjs --hideGenerator && node ./tools/replaceDocFileUnderline.js",
    "build-es6": "tsc -p tsconfig-es6.json",
    "build-amd": "tsc -p tsconfig-amd.json",
    "build": "npm run removeDist && npm run build-es6 && npm run build-amd && npm run docs",
    "test": "nyc mocha -t 5000",
    "test-nyc": "nyc npm test && nyc report --reporter=text-lcov | coveralls"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "sourceMap": true,
    "instrument": true
  },
